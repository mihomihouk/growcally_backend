{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "build",
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*", "src/modules/*"]
    }
  },
  "include": ["src/**/*", "prisma/**/*", "config/**/*"],
  "exclude": ["node_modules", "build"]
}
